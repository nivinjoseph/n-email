{
  "name": "@nivinjoseph/n-email",
  "version": "1.0.10",
  "description": "MJML based email development framework",
  "main": "index.js",
  "scripts": {
    "ts-compile": "tsc -p .",
    "ts-compile-watch": "npm run ts-compile -- -w",
    "ts-lint": "eslint . --ext .ts",
    "ts-build": "npm run ts-compile && npm run ts-lint",
    "ts-build-dist": "npm run ts-build && tsc -p ./dist",
    "webpack-build": "webpack",
    "webpack-build-watch": "npm run webpack-build -- -w",
    "webpack-serve": "webpack serve",
    "build": "npm run ts-build && env=prod npm run webpack-build",
    "predev": "npm run ts-build",
    "dev": "concurrently \"npm:ts-compile-watch\" \"npm:webpack-serve\"",
    "clean-src": "find ./src -name \"*.js\" -delete -o -name \"*.map\" -delete && rm -f tsconfig.tsbuildinfo",
    "clean-test": "find ./test -name \"*.js\" -delete -o -name \"*.map\" -delete && rm -f tsconfig.tsbuildinfo",
    "clean-test-emails": "find ./test-emails -name \"*.js\" -delete -o -name \"*.map\" -delete && rm -f tsconfig.tsbuildinfo",
    "clean-all": "npm run clean-src && npm run clean-test && npm run clean-test-emails",
    "pretest": "npm run ts-build",
    "test": "mocha --timeout 10000000 --exit --reporter spec --ui tdd --require ts-node/register --extensions ts \"./test/**/*.test.js\"",
    "publish-package": "npm run ts-build-dist && git add . && git commit -m 'preparing to publish new version' && npm version patch && git push && npm publish --access=public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivinjoseph/n-email.git"
  },
  "keywords": [
    "email",
    "development",
    "mjml"
  ],
  "author": "NiviN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nivinjoseph/n-email/issues"
  },
  "homepage": "https://github.com/nivinjoseph/n-email#readme",
  "devDependencies": {
    "@types/mime-types": "^2.1.1",
    "@types/mjml": "^4.7.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.11.38",
    "@types/sharp": "^0.30.5",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "concurrently": "^7.4.0",
    "eslint": "^8.24.0",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@nivinjoseph/n-config": "^1.0.35",
    "@nivinjoseph/n-defensive": "^1.0.41",
    "@nivinjoseph/n-exception": "^1.0.26",
    "@nivinjoseph/n-ext": "^1.1.35",
    "@nivinjoseph/n-log": "^2.0.6",
    "@nivinjoseph/n-util": "^1.0.79",
    "@sendgrid/mail": "^7.7.0",
    "aws-sdk": "^2.1227.0",
    "btoa": "^1.2.1",
    "clean-webpack-plugin": "^4.0.0",
    "enhanced-resolve": "^5.9.3",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "hash-sum": "^2.0.0",
    "html-loader": "^0.5.5",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "imagemin-webp": "^6.0.0",
    "loader-utils": "^2.0.0",
    "memfs": "^3.4.4",
    "mime-types": "^2.1.32",
    "mjml": "^4.10.2",
    "sharp": "^0.30.4",
    "source-map-support": "^0.5.21",
    "tslib": "^2.4.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.11.1"
  }
}
